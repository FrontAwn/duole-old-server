html
  head
    title ing
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type">
    <link rel="stylesheet" href="./assets/css/duole.css">

    style(type='text/css').
      body {
        padding: 10px auto;
      }
      td.size {
        border-right: 1px solid #ccc;
        padding: 1px 4px;
        text-align: center;
      }
      td.title {
        background: #f1f1f1;
      }

  body
    div#app( v-cloak )
      p 仅显示以下尺码： {{sizesOrdered.join(', ')}}
      div(v-for="v in ls")
        h4 更新于{{v.time}}

        div(v-if="Object.keys(v.newSkus).length > 0")
          p 新增货号
            div(style="position:relative;")
              div(v-for="(sku,v) in v.newSkus") {{sku}}

                table
                  tr
                    td(valign="top")
                      img(:src="'http://192.168.1.87:3000/?sku=' + sku" height="150")




        <!-- p {{v.newBatches | json}} -->

        div(v-if="v.newBatches")
          div 新增批次

            div(v-for="(sku, batches) in v.newBatches" style="position:relative;border-bottom:1px solid #ccc;")
              table
                tr
                  td(valign="top")
                    img(:src="'http://192.168.1.87:3000/?sku=' + sku" height="150")

                  td(style="padding-left: 20px;")
                    b
                      a(:href="'https://atonce.nike.net/#/detail/id/'+sku" target="blank" style="color:#F5361C") {{sku}}
                    div(v-for="(time, batch) in batches" style="padding: 10px 0 0 0px;")
                        font(style="color:#999;") {{batch.date}}
                        div(style="padding: 0 0 0 0px;")
                          table
                            tr
                              td.size.title(v-for="size in sizesOrdered" v-if="batch.sizes[size]")
                                b {{size}}
                            tr
                              td.size(v-for="size in sizesOrdered" v-if="batch.sizes[size]") {{batch.sizes[size]}}




          p 变化
            div(v-for="(sku, batches) in v.changeBatches")
              div 
                <!-- p {{v.changeBatches | json}} -->

                div(v-for="(time, batch) in batches")
                  table
                    tr
                      td(valign="top")
                        img(:src="'http://192.168.1.87:3000/?sku=' + sku" height="50")
                      td
                        p {{time}} {{batch | json}}

          <!-- div {{v | json}} -->
          hr


